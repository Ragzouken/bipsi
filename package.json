{
  "name": "binksi",
  "version": "1.0.0",
  "main": "dist/index.js",
  "repository": "git@github.com:smwhr/bipsi.git",
  "author": "Ju / Smwhr <ju@smwhr.net>",
  "license": "MIT",
  "dependencies": {
    "inkjs": "^2.0.0",
    "node-html-parser": "^5.1.0",
    "pug": "^3.0.2"
  },
  "devDependencies": {
    "light-server-pug": "^2.6.4",
    "pug-cli": "^1.0.0-alpha6"
  },
  "scripts": {
    "watch": "pug -P -w -o dist -b src src/index.pug",
    "editor": "light-server-pug -o -s dist -w 'src/**, data/** # yarn build'",
    "ink": "inklecate -o data/story.ink.json data/story.ink && node build-scripts/cleanJson.js data/story.ink.json",
    "build": "pug -P -o dist -b src src/index.pug",
    "build:empty": "pug -P -o dist -b src src/index.pug && node build-scripts/makeEmptyEditor.js dist/index.html dist/index.html",
    "make-player": "node build-scripts/makePlayer.js dist/index.html dist/player.html",
    "dist-doc": "mkdir -p dist/docs && cp -R docs/* dist/docs"
  }
}
