<!DOCTYPE html>
html(lang="en" data-remix-generation="0" data-editor-live="https://smwhr.github.io/binksi")
    head
        title binksi
        meta(name="viewport" content="width=device-width, initial-scale=1.0")
        meta(charset="utf-8")
        link(rel="icon" type="image/png" href="data:image/png;base64,")
        link(rel="stylesheet" href="https://fonts.googleapis.com/css2?family=Press+Start+2P" type="text/css")
        // scripts
        script
            include scripts/utility.js
        script
            include scripts/maker.js
        script
            include scripts/blitsy.js
        script
            include scripts/text.js
        script
            include scripts/dialogue.js
        script
            include scripts/bipsi.js
        script
            include scripts/playback.js
        script
            include scripts/debug.js
        script
            include ../node_modules/inkjs/dist/ink-full.js
        script
            include scripts/preload.js
        script(data-editor-only)
            include scripts/editor/utility.js
        script(data-editor-only)
            include scripts/editor/story-editor.js
        script(data-editor-only)
            include scripts/editor/editor.js
        script(data-editor-only)
            include scripts/editor/room-select.js
        script(data-editor-only)
            include scripts/editor/tile-select.js
        script(data-editor-only)
            include scripts/lib/perfect-json.js
        script(data-editor-only)
            include scripts/editor/palette-select.js
        script(data-editor-only)
            include scripts/editor/color-select.js
        script
            include scripts/start.js
        // styles
        style
            include styles/base-style.css
        style
            include styles/playback-style.css
        style(data-editor-only)
            include styles/editor-style.css
    body(onload="start()").no-select
        #player(hidden)
            canvas#player-canvas(width=256 height=256)
        #editor(data-editor-only)
            include editor.pug
        img#loading-splash(hidden src="data:image/png;base64,")
        script#plugins
        script preload();
        script#bundle-embed(type="application/json")
        script#editor-embed(type="application/json" data-editor-only)
            include ../data/bipsi.json
        script#story-embed(type="application/json")
            include ../data/story.ink.json
        script#story-source(type="text/ink")
            include ../data/story.ink
        script#font-embed(type="text")
            include fonts/ibm437-small.bipsifont.txt
