        #event-properties
            .row
                datalist#field-names
                    option(value="one-time")
                    option(value="solid")
                    option(value="ending")
                    option(value="title")
                    option(value="graphic")
                    option(value="say")
                    option(value="exit")
                    option(value="touch")
                .event-sheet.column
                    .event-line#event-field-template(hidden)
                        input(type="text" name="field-name" list="field-names" autocomplete="off")
                        select(name="field-type")
                            option tag
                            option tile
                            option dialogue
                            option location
                            option javascript
                            option text
                            option json
                            option file
                .event-lines-toolbar
                    button(name="add-event-field")
                        include /icons/plus.svg
                    button(name="duplicate-event-field" hidden)
