            textarea
    #field-tile-editor(hidden)
        #field-tile-select.tile-select.radio-select(title="select tile")
            template#field-tile-select-template
                label
                    input(type="radio" name="field-tile-select")
    #field-location-editor(hidden)
        #field-room-select.room-select.radio-select(title="select room")
            template#field-room-select-template
                label
                    input(type="radio" name="field-room-select" value="0" title=`select room 0`)
                    canvas(width="16" height="16")
        canvas#field-position-select(width="128" height="128" title="select position")
    #field-file-editor(hidden)
        button(name="field-file-select") select file
        input#field-file-info(type="text" readonly value="test")
    #field-colors-editor.color-index-select(hidden)
        #field-color-select-foreground.radio-select.horizontal-capsule.color-select(title="select foreground")
            each _, i in (new Array(8).fill(0))
                label
                    input(type="radio" name="field-foreground-index" value=`${i}` title=`select foreground color ${i}`)
        #field-color-select-background.radio-select.horizontal-capsule.color-select(title="select foreground")
            each _, i in (new Array(8).fill(0))
                label
                    input(type="radio" name="field-background-index" value=`${i}` title=`select background color ${i}`)