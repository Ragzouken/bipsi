            option(value="touch")
            option(value="add-behavior")
            option(value="solid")
            option(value="one-time")
            option(value="page-color")
            option(value="exit")
            option(value="graphic")
            option(value="colors")
            option(value="set-avatar")
            option(value="touch-location")
            option(value="title")
            option(value="ending")
            option(value="say")
            option(value="say-style")
            option(value="say-mode")
            option(value="say-shared-id")
            option(value="no-says")
            option(value="music")
            option(value="stop-music")
            option(value="is-player")
            option(value="is-setup")
            option(value="is-library")
        .event-sheet.column
            .event-line#event-field-template(hidden)
                input(type="text" name="field-name" list="field-names" autocomplete="off")
                select(name="field-type")
                    option tag
                    option tile
                    option colors
                    option dialogue
                    option location
                    option javascript
                    option text
                    option json
                    option file
